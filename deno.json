{
  "tasks": {
    "dev": "deno run -A npm:vite",
    "dev:api": "deno run -A --env-file=.env.local --watch dev-server.ts --port=3000",
    "dev:full": "./start-dev.sh",
    "build": "deno run -A npm:vite build",
    "build:dev": "deno run -A npm:vite build --mode development",
    "preview": "deno run -A npm:vite preview",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "check": "deno check **/*.ts **/*.tsx"
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["node_modules/", "dist/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars", "no-explicit-any"]
    }
  },
  "fmt": {
    "include": ["src/"],
    "exclude": ["node_modules/", "dist/"],
    "lineWidth": 100,
    "indentWidth": 2,
    "singleQuote": false,
    "semiColons": true
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["dom", "dom.iterable", "esnext"]
  },
  "imports": {
    "@/": "./src/",
    "@deno/sandbox": "jsr:@deno/sandbox@^0.0.3",
    "@std/http": "jsr:@std/http@^1.0.0"
  }
}